<h2>Payment Report</h2>

<div class="row" style="margin-top:30px">

    <div class="col-md-12">

        <form id="paymentReportForm">

            <div class="form-horizontal">

                <div class="form-group">
                    <label class="col-md-4 control-label">Name</label>
                    <div class="col-md-8">
                        <select class="form-control" id="nameDDL" name="MemberId"></select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Year</label>
                    <div class="col-md-8">
                        <select class="form-control" id="yearDDL" name="YearId"></select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Month</label>
                    <div class="col-md-8">
                        <select class="form-control" id="monthDDL" name="MonthId"></select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <button style="margin-right: 5px; width: 70px" id="findButton" type="button" class="btn btn-success">Find</button>
                        @*<input style="margin-right: 5px; width: 70px" id="processButton" type="button" value="Process" class="btn btn-success" />*@
                        <input style="width: 70px" id="clearButton" type="reset" value="Clear" class="btn btn-primary" />
                    </div>
                    @*</div>*@
                </div>
            </div>
        </form>

    </div>

    @*modal start*@
    <div class="modal fade" id="myModalForDetails" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    Name: <label id="nameText"></label>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
                <div class="modal-body">                
                    <div class="form-horizontal">

                        <div>
                            <table class="table table-bordered table-striped table-condensed" id="detailsTable" style="width: 100%"></table>
                        </div>
                        @*<div style="float:right">
                            Total Amount: <label id="total"></label>
                        </div>*@
                    </div>
                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
                    Total Amount: <label id="total"></label>
                </div>
            </div>
        </div>
    </div>
    @*modalEnd*@

    <div class="col-md-12 well table table-responsive">
        <div style="padding-top: 30px">
            <table class="table table-bordered table-striped table-condensed" id="tableElement" style="width: 100%"></table>
        </div>
    </div>

</div>
